<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
        <init-param>
            <param-name>user</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>pass</param-name>
            <param-value>admin</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ajout</servlet-name>
        <servlet-class>ajout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prods</servlet-name>
        <servlet-class>prods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajouterpanier</servlet-name>
        <servlet-class>ajouterpanier</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajout</servlet-name>
        <url-pattern>/ajout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prods</servlet-name>
        <url-pattern>/prods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajouterpanier</servlet-name>
        <url-pattern>/ajouterpanier</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
